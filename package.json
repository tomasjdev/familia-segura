{
  "name": "familia-segura",
  "version": "1.0.0",
  "description": "Familia Segura (Node/Express/Prisma/SQLite)",
  "scripts": {
    "dev": "node src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "node scripts/seed.js",
    "db:diff": "prisma migrate diff --from-url=\"file:./prisma/dev.db\" --to-url=\"$DATABASE_URL\" --script > migrate.sql",
    "db:apply": "psql \"$DATABASE_URL\" -f migrate.sql"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "twilio": "^5.10.4"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  }
}
